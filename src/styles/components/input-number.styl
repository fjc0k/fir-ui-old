@import "../settings";

.{$.inputNumber} {
  display: inline-flex;
  align-items: center;
  height: $inputNumber.height;
  line-height: $inputNumber.height;

  &.is-block {
    display: flex;
  }

  &_input-box {
    flex: 1;
    width: $inputNumber.inputBox.width;
    border-line: 0 (top bottom);
    &.is-disabled {
      disabled: true;
    }
  }

  &_input {
    text-align: center;
    -moz-appearance: textfield;
    &::-webkit-outer-spin-button, &::-webkit-inner-spin-button {
      -webkit-appearance: none;
      margin: 0;
    }
  }

  &_button {
    text-align: center;
    border-line: 0;
    width: $inputNumber.height;
    color: $inputNumber.button.font.color;
    &.is-disabled {
      disabled: true;
    }
    &:active {
      color: $inputNumber.button.active.font.color;
      background-color: $inputNumber.button.active.backgroundColor;
    }
  }
}
