@import "../variables";

.f {
  &--fade {
    &-enter, &-leave-to {
      opacity: 0;
    }
    &-enter-active, &-leave-active {
      transition: opacity $transition.time;
    }
  }

  &--slide-from-bottom {
    &-enter, &-leave-to {
      opacity: 0;
      transform: translateY(100%);
    }
    &-enter-active, &-leave-active {
      transition: $transition.time $transition.fn;
    }
  }

  &--slide-from-top {
    &-enter, &-leave-to {
      opacity: 0;
      transform: translateY(-100%);
    }
    &-enter-active, &-leave-active {
      transition: $transition.time $transition.fn;
    }
  }

  &--slide-from-right {
    &-enter, &-leave-to {
      opacity: 0;
      transform: translateX(100%);
    }
    &-enter-active, &-leave-active {
      transition: $transition.time $transition.fn;
    }
  }

  &--slide-from-left {
    &-enter, &-leave-to {
      opacity: 0;
      transform: translateX(-100%);
    }
    &-enter-active, &-leave-active {
      transition: $transition.time $transition.fn;
    }
  }
}
