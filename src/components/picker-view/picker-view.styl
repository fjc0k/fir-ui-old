@import "settings";

.picker-view {
  position: relative;
  overflow: hidden;
}

.mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  margin: 0 auto;
  background:
    linear-gradient(
      180deg,
      rgba(255, 255, 255, 0.95),
      rgba(255, 255, 255, 0.6)
    ),
    linear-gradient(
      0deg,
      rgba(255, 255, 255, 0.95),
      rgba(255, 255, 255, 0.6)
    );
  background-position: top, bottom;
  background-repeat: no-repeat;
  pointer-events: none;
  z-index: 2;
}

.indicator {
  border-line: 0 (top bottom);
  position: absolute; // 必须放在 border-line 后
  width: 100%;
}

.content {
  display: flex;
  overflow: hidden;
  text-align: center;
}

.scroll {
  flex: 1;
}

.unit {
  flex-center: true;
}

.divider {
  flex-center: true;
  &:last-child {
    display: none;
  }
}

.loading {
  flex-center: true;
  flex: 1;
}

.group {
  position: relative;
}

.item {
  ellipsis: 1;
  &.disabled {
    disabled: true;
  }
}