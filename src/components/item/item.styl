@import "settings";

.item {
  display: flex;
  flex-direction: column;
  &:last-child {
    > [data-component-line] {
      display: none;
    }
  }
}

$gap {
  > *:not(:first-child) {
    margin-left: $item.body.gap;
  }
}

.body {
  @extend $gap;
  flex-center: true;
  min-height: $item.body.minHeight;
  padding: $item.body.padding;
}

.left, .right {
  flex-center: true;
}

.middle {
  @extend $gap;
  flex-center: true;
  flex: 1;
}

.info {
  @extend $gap;
  flex-center: true;
}

.outline {
  display: flex;
  flex-direction: column;
  flex: 1;
  overflow-x: hidden;
}

.desc {
  font-size: $item.desc.font.size;
  color: $item.desc.font.color;
  text-wrap: true; // 同时父元素应有 overflow-x: hidden
}

.extra {
  flex: 1;
}

.note {
  font-size: $item.note.font.size;
  color: $item.note.font.color;
}

.arrow {
  font-size: $item.arrow.size;
  color: $item.arrow.color;
}
