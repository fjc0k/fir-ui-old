@import "settings";

.divider {
  flex-center: true;
  font-size: $divider.font.size;
  color: $divider.font.color;
}

.inner {
  flex-center: true;
  width: $divider.width;
  padding: $divider.padding;  
}

.body {
  display: inline-block;
  text-align: center;
  &:not(:empty) {
    margin: 0 $divider.gap;
  }
}

.line {
  flex: 1;
  height: 1px;
  min-width: $divider.line.minWidth;
  color: $divider.line.color;
  border-line: 0 top currentColor;
}

.right .rline {
  flex: 0;  
}

.left .lline {
  flex: 0;  
}