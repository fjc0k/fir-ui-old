{
  "name": "fir-ui",
  "version": "0.21.0",
  "description": "一个好用的 Vue 移动端 UI 组件库",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "fjc0k/fir-ui"
  },
  "author": "fjc0k <fjc0kb@gmail.com>",
  "license": "MIT",
  "files": [
    "dist",
    "lib"
  ],
  "scripts": {
    "prepublishOnly": "yarn build",
    "dev": "bundler dev playground/index.js --config config/dev.config.js",
    "build": "bundler config/fir-ui.config.js",
    "build:lib": "bundler config/fir-lib.config.js",
    "build:all": "yarn build & yarn build:lib",
    "ac": "node scripts/add-component.js",
    "ec": "node scripts/export-components.js",
    "rc": "node scripts/remove-component.js",
    "pub": "lerna publish --conventional-commits",
    "link": "lerna link",
    "postinstall": "lerna link"
  },
  "eslintConfig": {
    "root": true,
    "extends": "@fir-ui/fir"
  },
  "eslintIgnore": [
    "**/fixtures/**",
    "**/dist/**",
    "**/lib/**",
    "**/docs/**",
    "**/templates/**"
  ],
  "browserslist": [
    "iOS 6",
    "Android 4.0"
  ],
  "dependencies": {
    "@fir-ui/date-formatter": "^0.2.5",
    "autosize": "^4.0.1",
    "better-scroll": "^1.9.1",
    "lodash": "^4.17.5",
    "vue-better-sync": "^3.1.0",
    "vue-css-modules": "^1.0.1",
    "vue-merge-data": "^0.1.0"
  },
  "devDependencies": {
    "@fir-ui/bundler": "^0.6.0",
    "@fir-ui/eslint-config-fir": "^0.3.2",
    "cac": "^4.4.4",
    "eslint": "^4.19.1",
    "fs-extra": "^5.0.0",
    "klaw": "^2.1.1",
    "lerna": "^2.10.0"
  }
}
