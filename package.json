  "dependencies": {
    "lodash": "^4.17.5",
    "vue-better-sync": "^2.2.3",
    "vue-css-modules": "^0.5.1"
  },
  "devDependencies": {
    "@fir-ui/bundler": "^0.3.0",
    "@fir-ui/eslint-config-fir": "^0.2.0",
    "cac": "^4.4.4",
    "eslint": "^4.19.1",
    "fs-extra": "^5.0.0",
    "klaw": "^2.1.1",
    "lerna": "^2.9.0",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "webpack": "^4.4.1"
  }
