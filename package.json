{
  "name": "fir-ui",
  "version": "0.8.0",
  "description": "一个好用的 Vue 移动端 UI 组件库",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "fjc0k/fir-ui"
  },
  "author": "fjc0k <fjc0kb@gmail.com>",
  "license": "MIT",
  "files": [
    "dist",
    "lib"
  ],
  "firb": {
    "entry": "src/components/button/button.js",
    "format": "cjs",
    "postcss": {
      "modules": true
    }
  },
  "scripts": {
    "demo": "vue serve demo/index.js",
    "build": "bundler build",
    "add": "node scripts/add-component.js",
    "export": "node scripts/export-components.js",
    "pub": "lerna publish --conventional-commits",
    "link": "lerna link",
    "postinstall": "lerna link"
  },
  "eslintConfig": {
    "root": true,
    "extends": "@fir-ui/fir"
  },
  "browserslist": [
