{
  "name": "fir-ui",
  "version": "0.2.5",
  "description": "一个好用的 Vue 移动端 UI 组件库",
  "main": "src/index.js",
  "repository": "git@github.com:fjc0k/fir-ui.git",
  "author": "fjc0k <fjc0kb@gmail.com>",
  "license": "MIT",
  "files": [
    "dist",
    "lib"
  ],
  "scripts": {
    "serve": "vue serve demo/main.js",
    "build": "vue-cli-service build --target lib --name fir src/main.js",
    "test": "vue-cli-service test",
    "lint": "vue-cli-service lint",
    "add": "node scripts/add-component.js",
    "export": "node scripts/export-components.js",
    "pub": "lerna publish --conventional-commits",
    "pubf": "lerna publish --conventional-commits --force-publish=*",
    "bs": "lerna bootstrap"
  },
  "devDependencies": {
    "@babel/plugin-proposal-optional-chaining": "^7.0.0-beta.42",
    "@fir-ui/babel-preset-library": "^0.0.6",
    "@fir-ui/eslint-config-fir": "^0.0.6",
    "@vue/cli-plugin-babel": "^3.0.0-beta.6",
    "@vue/cli-plugin-eslint": "^3.0.0-beta.6",
    "@vue/cli-plugin-unit-jest": "^3.0.0-beta.6",
    "@vue/cli-service": "^3.0.0-beta.6",
    "@vue/test-utils": "^1.0.0-beta.10",
    "babel-core": "^7.0.0-0",
    "babel-jest": "^22.0.4",
    "cac": "^4.4.4",
    "fs-extra": "^5.0.0",
    "klaw": "^2.1.1",
    "lerna": "^2.9.0",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.1",
    "vue": "^2.5.13",
    "vue-template-compiler": "^2.5.13"
  },
  "babel": {
    "presets": [
      [
        "@fir-ui/library",
        {
          "jsx": false
        }
      ]
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "plugin:vue/essential",
      "@fir-ui/fir"
    ]
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8",
    "iOS 6",
    "Android 4.0"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "vue"
    ],
    "transform": {
      "^.+\\.vue$": "vue-jest",
      "^.+\\.jsx?$": "babel-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "snapshotSerializers": [
      "jest-serializer-vue"
    ]
  },
  "dependencies": {
    "lodash": "^4.17.5",
    "vue-better-sync": "^1.1.0"
  }
}
